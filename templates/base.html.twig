<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title 'Dans Ton Stock' %}
		</title>
		{% block stylesheets %}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet"> 
			<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css' integrity='sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==' crossorigin='anonymous'/>
			<link rel="shortcut icon" type="image/ico" href="/favicon.ico"/>
			<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css"/>
			
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body>
		<header id="header">
			<a href="{{ app.user ? path('product_index', {'id': app.user.id}) : path('home') }}"><img class="logo" src="{{asset('img/logo.png')}}" alt=""></a>
		{% if app.user %}
			<a href="{{path('product_index', {'id': app.user.id})}}"><i class="fas fa-clipboard-list"></i></a>
			<a href="{{path('manage_index')}}"><img class="kitchen" src={{asset("img/kitchen.png")}} alt=""></a>
			<a href="{{path('manage_profile', {'id': app.user.id})}}"><i class="fas fa-user-cog"></i></a>
			<a href="{{path('app_logout')}}"><i class="fas fa-sign-out-alt"></i></a>
		{% else %}
			<a href="{{path('app_register')}}"><i class="fas fa-user-plus"></i></a>
			<a href="{{path('app_login')}}"><i class="fas fa-sign-in-alt"></i></a>
		{% endif %}
		
		</header>
		
		
		<main id="main">
			{{ include('_messages.html.twig') }}
			{% block body %}{% endblock %}
		</main>

		<footer id="footer">
    <a href="#">Nous contacter</a>
		<a href="#">Mentions légales</a>
			JMV &copy; 2022
		<a href="#">Conditions générales d'utilisation</a>
		<a href="#">Politique de confidentialité</a>
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{path('admin_user_index')}} "><i class="fas fa-users-cog"></i></a>
				<a href="{{path('admin_category_index')}} "><i class="fas fa-utensils"></i></a>
			{% endif %}
		</footer>
		{% block javascripts %}
			<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js' integrity='sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==' crossorigin='anonymous'></script>
			<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.js"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
